<%= form_with model: @uploaded_file, local: true do |form| %>
  <div style="max-width: 400px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <div style="margin-bottom: 16px;">
      <%= form.file_field :file, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
    <div style="margin-bottom: 16px;">
      <%= form.label :target_language, "Select Language", style: "display: block; margin-bottom: 8px; font-weight: bold; color: #333;" %>
      <%= form.select :target_language, [['French', 'fr'], ['Spanish', 'es'], ['German', 'de']], {}, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
    <div>
      <%= form.submit "Upload and Translate", style: "width: 100%; padding: 10px; background-color: #007bff; color: #fff; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;" %>
    </div>
  </div>
<% end %>
